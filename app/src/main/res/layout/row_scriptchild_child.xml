<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">

    <com.inspiredandroid.linuxcommandbibliotheca.view.TerminalTextView
        android:id="@+id/row_scriptdescription_child_tv_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textIsSelectable="true"
        android:textSize="16sp"
        android:textStyle="bold"
        tool:text="xkill" />

    <ImageButton
        android:id="@+id/row_scriptdescription_child_iv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:contentDescription="@string/fragment_scriptdescription_share_command"
        android:src="@drawable/ic_share_white_24dp" />

</LinearLayout>